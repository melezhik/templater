package-install 'git';

set_spl %(templater-dev => 'https://github.com/melezhik/templater.git');

task-run 'install my config', 'templater-dev', %(
  variables => %(
    name => 'sparrowdo ...',
    language => 'perl6'
  ),
  #on_change => "echo trigger run",
  target  => '/tmp/out.txt',
  source  => slurp 'examples/foo.tmpl'
);

bash "cat /tmp/out.txt";
